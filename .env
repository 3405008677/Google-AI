# ===========================================
# Google-AI 项目环境变量配置示例
# ===========================================
# 复制此文件为 .env 并填入您的实际值
# ===========================================

# -------------------------------------------
# 服务器配置
# -------------------------------------------
HOST=0.0.0.0                    # 服务器监听地址
PORT=3210                       # 服务器监听端口
DEBUG=false                     # 是否开启调试模式
WORKERS=1                       # 工作进程数量
LOG_LEVEL=INFO                  # 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
ENABLE_ROUTER=true              # 是否启用路由功能
MAX_UPLOAD_SIZE=1048576         # 最大上传文件大小 (bytes, 预设 1MB)
STATIC_DIR=static               # 静态文件目录

# -------------------------------------------
# SSL/TLS 配置 (可选)
# -------------------------------------------
SSL_ENABLED=false               # 是否启用 SSL
SSL_CERT_FILE=                  # SSL 证书文件路径
SSL_KEY_FILE=                   # SSL 私钥文件路径

# -------------------------------------------
# JWT 认证配置
# -------------------------------------------
JWT_SECRET_KEY=PQJ  # JWT 密钥 (必需，请更换为强密码)
JWT_ALGORITHM=HS256                              # JWT 加密算法
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30               # Access Token 过期时间 (分钟)
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7                  # Refresh Token 过期时间 (天)
JWT_ISSUER=google-ai-service                     # JWT 发行者

# -------------------------------------------
# 管理员账户配置
# -------------------------------------------
AUTH_ADMIN_USERNAME=admin       # 管理员用户名
AUTH_ADMIN_PASSWORD=123456    # 管理员密码 (请更换为强密码)

# -------------------------------------------
# Gemini API 配置
# -------------------------------------------
GEMINI_API_KEY=AIzaSyAcChAbr5bA4qbu3350MrbDAAYQdMER2hA                 # Google Gemini API 密钥 (必需)
GEMINI_MODEL=gemini-3-pro-preview   # Gemini 模型名称
GEMINI_TIMEOUT=60               # 请求超时时间 (秒)
GEMINI_MAX_RETRIES=3            # 最大重试次数

# -------------------------------------------
# Qwen (通义千问) API 配置
# -------------------------------------------
QWEN_API_KEY=sk-ad3546eb45ad47ec8b77c823d9438354                   # 阿里云通义千问 API 密钥
QWEN_MODEL=qwen-plus            # Qwen 模型名称
QWEN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1  # Qwen API 基础 URL
QWEN_TIMEOUT=60                 # 请求超时时间 (秒)
QWEN_MAX_RETRIES=3              # 最大重试次数

# -------------------------------------------
# 自定义模型配置 (Self Model)
# -------------------------------------------
SELF_MODEL_BASE_URL=https://ai.pengqianjing.top/v1            # 自定义模型 API 基础 URL
SELF_MODEL_NAME=PQJ-Dom-One                # 自定义模型名称
SELF_MODEL_API_KEY=ollama             # 自定义模型 API 密钥
SELF_MODEL_TIMEOUT=60           # 请求超时时间 (秒)
SELF_MODEL_MAX_RETRIES=3        # 最大重试次数

# Tavily 搜索配置
TAVILY_API_KEY=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   # 從 https://tavily.com 獲取

# 可選配置
TAVILY_MAX_RESULTS=5             # 最大搜索結果數（1-20）
TAVILY_SEARCH_DEPTH=basic        # 搜索深度：basic 或 advanced
TAVILY_INCLUDE_ANSWER=true       # 是否包含 AI 摘要

# -------------------------------------------
# Redis 配置 (用于语义缓存)
# -------------------------------------------
REDIS_HOST=localhost            # Redis 服务器地址
REDIS_PORT=6379                 # Redis 服务器端口
REDIS_DB=0                      # Redis 数据库编号
REDIS_PASSWORD=                 # Redis 密码 (可选)

# -------------------------------------------
# 性能层配置
# -------------------------------------------
ENABLE_SEMANTIC_CACHE=true      # 是否启用语义缓存
ENABLE_RULE_ENGINE=true         # 是否启用规则引擎
SEMANTIC_CACHE_THRESHOLD=0.95   # 语义缓存相似度阈值 (0-1)

